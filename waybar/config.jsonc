      "update": "󰮯  System Update",
      "udpate": "󰮯  System Update",
      "updtae": "󰮯  System Update",
      "updaet": "󰮯  System Update",
      "(.*) - GNU Emacs at TesseractPiTop": "  $1",
      "(.*) – Doom Emacs": "  $1",
