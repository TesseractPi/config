      "yay -Ss (.*)": "󰣇   $1",
      "yay -R (.*)": "󰣇 󱧔  $1",
      "sudo pacman -S (.*)": "󰮯 󱧕  $1",
      "sudo pacman -Ss (.*)": "󰮯   $1",
      "pacman -Ss (.*)": "󰮯   $1",
      "sudo pacman -R (.*)": "󰮯 󱧔  $1",
      "flatpak install (.*)": " 󱧕  $1",
